<div class="contents row">
  <div class="container">
    <h3>新しい写真を追加する</h3>
    <%= form_with(model: [@album, @photo], local: true, html: { class: 'photo-form', multipart: true }) do |form| %>
      <div class="field">
        <%= form.label :description, "メモ" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="field">
    <%= form.label :images, "写真" %>
    <%= form.file_field :images , id:"posts_image" %>
  </div>

      <div class="actions">
        <%= form.submit "追加する", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to '戻る', album_path(@album), class: "btn btn-secondary mt-3" %>
  </div>
</div>