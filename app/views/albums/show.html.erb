<div class="contents row">
  <div class="content_post">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_album_path(@album.id) %>
        </li>
        <li>
          <%= link_to '削除', album_path(@album.id), data: { turbo_method: :delete } %>
        </li>
      </ul>
    </div>
    <p><%= @album.title %></p>
    <span class="name">
      <a href="/users/<%= @album.user.id %>">
        <span>作成者</span><%= @album.user.nickname %>
      </a>
    </span>
  </div>
</div>

<div class="photos">
  <% if @photos.any? %>
    <% @photos.each do |photo| %>
      <div class="photo">
        <% if photo.image.attached? %>
          <%= image_tag photo.image.variant(resize: "300x300") %>
        <% end %>
        <p><%= photo.description %></p>
        <p><%= photo.created_at.strftime("%Y-%m-%d") %></p>
      </div>
    <% end %>
  <% else %>
    <p>このアルバムにはまだ写真がありません</p>
  <% end %>
</div>