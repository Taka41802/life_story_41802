<div class="contents row albums-page">
  <% if @photos.any? %>
    <p><%= @album.title %>の写真一覧(<span id="photo-count"><%= @photos.size %></span>件)</p>
    <div class="albums"> <!-- クラス名を統一 -->
      <% @photos.each do |photo| %>
        <div class="album"> <!-- クラス名を統一 -->
          <div class="more">
            <p class="album-title"><%= photo.created_at.strftime("%Y-%m-%d") %></p> <!-- タイトルの形式を統一 -->
            <!-- 他のアクションボタンがあればここに追加 -->
          </div>
          <% if photo.images.attached? %>
            <%= image_tag photo.images.variant(resize: "300x300"), class: "album-photo" %> <!-- クラス名を統一 -->
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>このアルバムにはまだ写真がありません</p>
  <% end %>
</div>