<div class="contents row">
  <% @albums.each do |album| %>
    <div class="content_post" >
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', "/albums/#{album.id}", data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
      <p></p>
      <span class="name">
        <%= album.title %>
      </span>
    </div>
  <% end %>
</div>