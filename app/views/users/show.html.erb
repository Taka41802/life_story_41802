<div class="contents row">
  <p><%= @nickname %>さんのアルバム一覧</p>
  <div class="albums">
    <% @albums.each do |album| %>
      <div class="album">
        <div class="more">
          <span><h2><%= album.title %></h2></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', edit_album_path(album) %>
            </li>
            <li>
              <%= link_to '削除', album_path(album), data: { turbo_method: :delete } %>
            </li>
          </ul>
        </div>
        <% album.image.each do |image| %>
          <%= link_to album_path(album) do %>
            <%= image_tag image, class: "album-photo" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>