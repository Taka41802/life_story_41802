<div class="contents row">
  <p><%= @nickname %>さんのアルバム一覧</p>
  <% @albums.each do |album| %>
    <div class="content_post" >
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_album_path(album) %>
          </li>
          <li>
            <%= link_to '削除', album_path(album), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </li>
        </ul>
      </div>
      <p><%= album.title %></p>
      <span class="name"><%= album.title %></span>
    </div>
  <% end %>
</div>